doctype html
html(lang="ja")
  head
    include inc/_meta
    // OGP
    // /OGP
    title
      if filters.category && !data.category
        | 不正なカテゴリ名です。｜実務家Link
      else
        if data.posts.results.length
          if data.category
            if data.category.japanese
              | #{data.category.japanese}｜記事一覧｜実務家Link
            else
              | #{data.category.name}｜記事一覧｜実務家Link
          else
            | 記事一覧｜実務家Link
    //- link(rel="stylesheet" href="http://fonts.googleapis.com/earlyaccess/notosansjapanese.css")
    link(rel="stylesheet" href="/styles/style.css")
  body#ichiran-page
    include inc/_header
    #contents.clearfix
      // メインコンテンツ
      .main-contents
        include inc/ichiran/_main
      // /メインコンテンツ
      // サイドコンテンツ
      .side-contents
        include inc/_side
    // /contents
    include inc/_footer
    script(type="text/javascript", src="/js/script.js")
